.root
  display: flex
  align-items: center
  height: 50px
  background-color: lighten(green, 59)
  border-radius: none
  border: none
  box-shadow: 0 3px 7px rgba(0, 0, 0, 0.1)
  padding: 0 30px
  font-size: 20px
  cursor: pointer
  outline: none
  transition: background-color 150ms

  &:hover
    background-color: lighten(green, 45)
