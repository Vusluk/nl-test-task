.root
  position: relative
  display: flex
  align-items: center
  border: 1px solid #e4e4e4
  font-size: 16px
  line-height: 20px

.placeholder
  position: absolute
  color: #a4a4a4
  top: 18px
  left: 10px
  font-size: 16px
  line-height: 14px
  transition: all 150ms

.textarea
  font: inherit
  font-size: inherit
  color: inherit
  border: none
  outline: none
  background: none
  width: 100%
  height: 100%
  padding: 14px 10px
  resize: none
